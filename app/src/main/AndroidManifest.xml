<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thatcbin.consecutivescrollerdemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.thatcbin.consecutivescrollerdemo.ConsecutiveActivity"/>
        <activity android:name="com.thatcbin.consecutivescrollerdemo.StickyActivity" />
        <activity android:name="com.thatcbin.consecutivescrollerdemo.SinkStickyActivity" />
        <activity android:name="com.thatcbin.consecutivescrollerdemo.SampleActivity" />
        <activity android:name="com.thatcbin.consecutivescrollerdemo.ViewPagerActivity" />
        <activity android:name="com.thatcbin.consecutivescrollerdemo.PermanentStickyActivity" />
        <activity android:name="com.thatcbin.consecutivescrollerdemo.FragmentActivity" />
        <activity android:name="com.thatcbin.consecutivescrollerdemo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>